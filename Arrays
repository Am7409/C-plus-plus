            using namespace std;
            int main() {
                 int a[]= {3, 1, 2, 2, 1, 2, 3, 3};
                 int n=8;
                 int k=4;
                 map<int,int> m;
                 for(int i=0;i<n;i++){
                     m[a[i]]++;
                 }
                 int c=n/k;
                 for(auto it:m){
                     if(it.second > c)
                     cout<<it.first<<" ";
                 }
                return 0;
            }
