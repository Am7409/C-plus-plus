This is type of Data Strcuter or a combination of edges and nodes .

Q1 Implemantion of graph in the adjecny list form

        //Solution
          #include <bits/stdc++.h>
          using namespace std;

          class graph{
            public: 
             unordered_map<int,list<int>> mp;
            void insertEgde(int u,int v, bool direction){
                //If Direction = 0 -> undirected
                // If Deriection = 1 -> undirected
                mp[u].push_back(v);
                if(direction==0){
                    mp[v].push_back(u);
                }
            }

            void printAdjecylist(){
                for(auto it:mp){
                    cout<<it.first <<" : ";
                    for(auto i:it.second){
                        cout<<i <<", ";
                    }
                    cout<<endl;
                }
            }

          };
          int main() {
            int n,m;
            cout<<"Enter the number of Nodes : ";
            cin>>n;
            cout<<"\nEnter the Number of Edges : ";
            cin>>m;
            graph g;
            for(int i=0;i<m;i++){
                int u,v;
                cin>>u>>v;
                g.insertEgde(u,v,0);
            }
            cout<<endl;
            g.printAdjecylist();
            return 0;
          }
